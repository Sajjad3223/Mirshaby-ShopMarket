@model ShopMarket.Core.ViewModels.UserViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "تغییر رمز عبور";
}
<div class="row mb-4">
    <div class="col-12">
        <div class="section-title mb-2">
            اطلاعات شخصی
        </div>
        <section class="shadow-around p-3">
            @if (ViewBag.IsSuccess?? false)
            {
                <div class="alert alert-success">
                    رمز عبور با موفقیت تغییر کرد!
                </div>
            }
            <form action="/userpanel/change-password" method="post">
                <div class="row">
                    <div class="col-lg-12 mb-5">
                        <div class="text-sm text-muted mb-3">پسورد فعلی:</div>
                        <div class="text-dark font-weight-bold">
                            <div class="form-element-row mb-0">
                                <input asp-for="OldPassword" class="input-element">
                                <span asp-validation-for="OldPassword"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 mb-5">
                        <div class="text-sm text-muted mb-3">پسورد جدید:</div>
                        <div class="text-dark font-weight-bold">
                            <div class="form-element-row mb-0">
                                <input asp-for="Password" class="input-element">
                                <span asp-validation-for="Password"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 mb-5">
                        <div class="text-sm text-muted mb-3">تکرار پسورد جدید:</div>
                        <div class="text-dark font-weight-bold">
                            <div class="form-element-row mb-0">
                                <input asp-for="RePassword" class="input-element">
                                <span asp-validation-for="RePassword"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-element-row text-left">
                            <button type="submit" class="btn-element btn-success-element">
                                <i class="fad fa-user-edit"></i>
                                ذخیره تغییرات
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>