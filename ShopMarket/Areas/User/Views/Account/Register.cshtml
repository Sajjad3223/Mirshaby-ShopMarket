@model ShopMarket.Core.ViewModels.UserViewModels.RegisterViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "ثبت نام";
}
<div class="container">
    <div class="auth-wrapper">
        <div class="auth-form shadow-around">
            <div class="site-logo">
                <a href="#">
                    <img src="/images/logo.png" alt="logo">
                </a>
            </div>
            <div class="auth-form-title">
                ثبت نام در شاپ مارکت
            </div>
            <form asp-action="Register" asp-controller="Account" asp-area="User" method="post">
                <div class="form-element-row">
                    <label asp-for="FullName" class="label-element"></label>
                    <div class="form-element-with-icon">
                        <input asp-for="FullName" class="input-element">
                    </div>
                    <span asp-validation-for="FullName"></span>
                </div>
                <div class="form-element-row">
                    <label asp-for="PhoneNumber" class="label-element"></label>
                    <div class="form-element-with-icon">
                        <input asp-for="PhoneNumber" class="input-element">
                        <i class="fad fa-mobile-alt"></i>
                    </div>
                    <span asp-validation-for="PhoneNumber"></span>
                </div>
                <div class="form-element-row">
                    <label asp-for="Email" class="label-element"></label>
                    <div class="form-element-with-icon">
                        <input asp-for="Email" class="input-element">
                    </div>
                </div>
                <div class="form-element-row">
                    <label asp-for="Password" class="label-element"></label>
                    <div class="form-element-with-icon">
                        <input asp-for="Password" class="input-element">
                        <i class="fad fa-key-skeleton"></i>
                    </div>
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-element-row">
                    <label asp-for="RePassword" class="label-element"></label>
                    <div class="form-element-with-icon">
                        <input asp-for="RePassword" class="input-element">
                        <i class="fad fa-key-skeleton"></i>
                    </div>
                    <span asp-validation-for="RePassword"></span>
                </div>
                <div class="form-element-row text-left">
                    <button type="submit" class="btn-element btn-info-element">
                        <i class="fad fa-sign-in-alt"></i>
                        ثبت نام در به شاپ مارکت
                    </button>
                </div>

            </form>
            <div class="auth-form-footer">
                <span>قبلا در همتا ثبت‌نام کرده‌اید؟ </span>
                <a asp-area="User" asp-controller="Account" asp-action="Login" class="link--with-border-bottom">وارد شوید</a>
            </div>
        </div>
    </div>
</div>

@section Script
{
    <partial name="_ValidationScriptsPartial" />
}
