@model ShopMarket.Core.ViewModels.UserViewModels.LoginViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "ورود به حساب کاربری";
}

<div class="container">
    <div class="auth-wrapper">
        <div class="auth-form shadow-around">
            @if (TempData["Activated"]?.ToString() == "success")
            {
                <div class="alert alert-success">
                    اکانت شما با موفقیت فعالسازی شد!
                </div>
            }
            else if (TempData["Activated"]?.ToString() == "fail")
            {
                <div class="alert alert-danger">
                    در فعال سازی اکانت شما مشکلی پیش آمد!
                </div>
            }
            @if (TempData["ResetPassword"]?.ToString() == "Changed")
            {
                <div class="alert alert-success">
                    پسورد با موفقیت تغییر کرد
                </div>
            }
            <div class="site-logo">
                <a href="#">
                    <img src="/images/logo.png" alt="logo">
                </a>
            </div>
            <div class="auth-form-title">
                ورود به شاپ مارکت
            </div>
            <form asp-action="Login" asp-controller="Account" asp-area="User" method="post">
                <div class="form-element-row">
                    <label asp-for="PhoneNumber" class="label-element"></label>
                    <div class="form-element-with-icon">
                        <input asp-for="PhoneNumber" class="input-element">
                        <i class="fad fa-mobile-alt"></i>
                    </div>
                    <span asp-validation-for="PhoneNumber"></span>
                </div>
                <div class="form-element-row">
                    <label asp-for="Password" class="label-element">
                        <span class="d-flex justify-content-between">
                            <span>کلمه عبور</span>
                            <a asp-area="user" asp-controller="Account" asp-action="ForgetPassword" class="link--with-border-bottom">رمز عبور خود را فراموش کرده‌ام</a>
                        </span>
                    </label>
                    <div class="form-element-with-icon">
                        <input asp-for="Password" class="input-element">
                        <i class="fad fa-key-skeleton"></i>
                    </div>
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-element-row">
                    <label asp-for="RememberMe" class="container-checkbox">
                        مرا به خاطر بسپار
                        <input asp-for="RememberMe">
                        <span class="checkmark"></span>
                    </label>
                </div>
                <div class="form-element-row text-left">
                    <button type="submit" class="btn-element btn-info-element">
                        <i class="fad fa-sign-in-alt"></i>
                        ورود به شاپ مارکت
                    </button>
                </div>

            </form>
            <div class="auth-form-footer">
                <span>کاربر جدید هستید؟</span>
                <a asp-area="User" asp-controller="Account" asp-action="Register" class="link--with-border-bottom">ثبت نام در شاپ مارکت</a>
            </div>
        </div>
    </div>
</div>

@section Script
{
    <partial name="_ValidationScriptsPartial" />
}
