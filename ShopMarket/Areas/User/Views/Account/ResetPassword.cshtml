@model ShopMarket.Core.ViewModels.UserViewModels.ResetPasswordViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "بازیابی رمز عبور";
}

<div class="container">
    <div class="auth-wrapper">
        <div class="auth-form shadow-around">
            
            <div class="site-logo">
                <a href="#">
                    <img src="/images/logo.png" alt="logo">
                </a>
            </div>
            <div class="auth-form-title">
                بازیابی رمز عبور
            </div>
            <form asp-action="ResetPassword" asp-controller="Account" asp-area="User" method="post">
                <input type="hidden" asp-for="ActiveCode"/>
                <div class="form-element-row">
                    <label asp-for="Password" class="label-element"></label>
                    <div class="form-element-with-icon">
                        <input asp-for="Password" class="input-element">
                        <i class="fad fa-key-skeleton"></i>
                    </div>
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-element-row">
                    <label asp-for="RePassword" class="label-element"></label>
                    <div class="form-element-with-icon">
                        <input asp-for="RePassword" class="input-element">
                        <i class="fad fa-key-skeleton"></i>
                    </div>
                    <span asp-validation-for="RePassword"></span>
                </div>
                <div class="form-element-row text-left">
                    <button type="submit" class="btn-element btn-info-element">
                        <i class="fad fa-sign-in-alt"></i>
                        تغییر رمز عبور
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Script
{
    <partial name="_ValidationScriptsPartial" />
}