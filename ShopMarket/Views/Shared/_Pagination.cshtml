@model int

<div class="col-12 px-0">
    <div class="pagination">

        <a href="" onclick="ChangePage(@(ViewBag.PageId-1))" class="prev"><i class="far fa-arrow-from-left" @(ViewBag.PageId <= 1 ? "disabled" : null)></i></a>

        @for (int i = 0; i < Model; i++)
        {
            <a href="" onclick="ChangePage(@(i+1))" class="@(ViewBag.PageId == i+1 ? "current" : null)">@(i+1)</a>
        }

        <a href="" onclick="ChangePage(@(ViewBag.PageId+1))" class="next"><i class="far fa-arrow-to-left" @(ViewBag.PageId == Model ? null : "disabled")></i></a>

    </div>
</div>