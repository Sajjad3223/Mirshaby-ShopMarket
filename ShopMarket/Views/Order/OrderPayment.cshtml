@model ShopMarket.Core.ViewModels.ShopViewModels.OrderViewModels.OrderViewModel
@{
    ViewData["Title"] = "پرداخت موفق";
}
    <div class="container">
        <div class="row mb-4">
            <div class="col-xl-9 col-lg-10 col-md-10 mb-md-0 mb-3">
                <div class="checkout-section shadow-around">
                    <div class="checkout-step">
                        <ul>
                            <li class="active">
                                <a href="#"><span>سبد خرید</span></a>
                            </li>
                            <li class="active">
                                <span>نحوه ارسال و پرداخت</span>
                            </li>
                            <li class="active">
                                <span>اتمام خرید و ارسال</span>
                            </li>
                        </ul>
                    </div>
                    <div class="checkout-message">
                        <div class="checkout-message-success mb-3">
                            <div class="icon-message success-icon">
                                <i class="fas fa-check"></i>
                            </div>
                            سفارش <span class="order-code">@Model.OrderId</span> با موفقیت پرداخت و ثبت گردید.
                            <div>
                                <span>کد پیگیری شما :</span>
                                <strong>@ViewBag.RefId</strong>
                            </div>
                        </div>
                        <div class="text-center text-muted">
                            <p class="mb-4">
                                پرداخت با موفقیت انجام شد. سفارش شما با موفقیت ثبت شد و در
                                زمان تعیین‌شده برای شما ارسال خواهد شد. از اینکه ما را برای خرید انتخاب کردید از
                                شما سپاسگزاریم.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>