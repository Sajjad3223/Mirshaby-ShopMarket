@page
@using ShopMarket.Core.Utilities.Convertors
@model ShopMarket.Pages.Admin.Stores.DeleteModel

@{
    ViewData["Title"] = "حذف فروشگاه";
    ViewData["page"] = "stores";
    ViewData["sub-page"] = "activeStores";
}

<section>
    <div class="card p-3">
        <h3>آیا از حذف فروشگاه زیر مطمئن هستید؟</h3>
        <div class="m-3">
            <dl class="row">
                <dt class="col-sm-2">
                    نام فروشگاه:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Store.StoreName)
                </dd>
                <dt class="col-sm-2">
                    توضیحات فروشگاه:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Store.StoreDescription)
                </dd>
                <dt class="col-sm-2">
                    ادرس فروشگاه:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Store.StoreAddress)
                </dd>

                <dt class="col-sm-2">
                    تاریخ ثبت:
                </dt>
                <dd class="col-sm-10">
                    @Model.Store.CreationDate.ToShamsi()
                </dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Store.Id" />
                <input type="submit" value="حذف" class="btn btn-danger" /> |
                <a asp-page="Index">برگشت به صفحه اصلی</a>
            </form>
        </div>
    </div>
</section>
