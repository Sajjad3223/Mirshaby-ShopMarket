@page
@using ShopMarket.Core.Utilities.Convertors
@model ShopMarket.Pages.Admin.Tickets.TicketModel
@{
    ViewData["Title"] = "تیکت ها";
    ViewData["page"] = "tickets";
}

<section>
    <div class="card p-3">
        <div class="row">
            <div class="col-5 m-2">
                <span>موضوع:</span>
                <strong>@Model.Ticket.Title</strong>
            </div>
            <div class="col-5 m-2">
                <span>نام فرستنده:</span>
                <strong>@Model.Ticket.FullName</strong>
            </div>
            <div class="col-5 m-2">
                <span>ایمیل فرستنده:</span>
                <strong>@Model.Ticket.Email</strong>
            </div>
            <div class="col-5 m-2">
                <span>تلفن فرستنده:</span>
                <strong>@(Model.Ticket.Phone??"-")</strong>
            </div>
            <div class="col-11 border border-2 border-primary rounded rounded-lg py-2 m-3">
                <span>متن پیام:</span>
                <p>@(Model.Ticket.Text)</p>
            </div>
            <div class="col-6 m-2">
                <span>تاریخ ارسال:</span>
                <strong>@(Model.Ticket.CreationDate.ToShamsi())</strong>
            </div>
        </div>
    
        <hr/>
        
        <form class="form row m-3" method="post">
            <label > متن پاسخ: </label>
            <textarea class="form-control col-12" name="answer" rows="5"></textarea>
            
            <button class="btn btn-primary col-4 m-3">ارسال پاسخ</button>
        </form>
    </div>
</section>