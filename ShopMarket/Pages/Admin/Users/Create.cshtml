@page
@model ShopMarket.Pages.Admin.Users.CreateModel
@{
    ViewData["Title"] = "افزودن کاربر";
    ViewData["page"] = "users";
    ViewData["sub-page"] = "activeUsers";
}

<section class="section">
    <h2>افزودن کاربر جدید</h2>
    <div class="card">
        <form method="post" class="form row m-3">
            <div class="form-group col-6">
                <label asp-for="UserViewModel.FullName" class="form-label"></label>
                <input asp-for="UserViewModel.FullName" class="form-control"/>
            </div>
            <div class="form-group col-6">
                <label asp-for="UserViewModel.Email" class="form-label"></label>
                <input asp-for="UserViewModel.Email" class="form-control"/>
            </div>
            <div class="form-group col-6">
                <label asp-for="UserViewModel.PhoneNumber" class="form-label"></label>
                <input asp-for="UserViewModel.PhoneNumber" class="form-control"/>
            </div>
            <div class="form-group col-6">
                <label asp-for="UserViewModel.Password"  class="form-label"></label>
                <input asp-for="UserViewModel.Password" type="password" class="form-control"/>
            </div>
            <button type="submit" class="btn btn-block btn-primary">افزودن کاربر</button>
        </form>
    </div>
</section>