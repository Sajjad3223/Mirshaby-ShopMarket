@page
@model ShopMarket.Pages.Admin.DiscountCodes.EditModel
@{
    ViewData["Title"] = "مدیریت تخفیفات";
    ViewData["page"] = "discount";
    ViewData["sub-page"] = "discount";
}

<section class="section">
    <h2>ویرایش تخفیف</h2>
    <div class="card">
        <form method="post" class="form row m-3">
            <input type="hidden" asp-for="DiscountCode.DiscountCodeId" />
            <div class="form-group col-6">
                <label asp-for="DiscountCode.Code" class="form-label"></label>
                <input asp-for="DiscountCode.Code" class="form-control" />
            </div>
            <div class="form-group col-6">
                <label asp-for="DiscountCode.Discount" class="form-label"></label>
                <input asp-for="DiscountCode.Discount" type="number" max="100" min="0" class="form-control" />
            </div>
            <div class="form-group col-6">
                <label asp-for="DiscountCode.CodeCount" class="form-label"></label>
                <input asp-for="DiscountCode.CodeCount" type="number" min="1" class="form-control" />
            </div>
            <div class="form-group col-6">
                <label asp-for="DiscountCode.ExpireTime" class="form-label"></label>
                <input asp-for="DiscountCode.ExpireTime" type="date" class="form-control" />
            </div>
            <div class="checkbox col-6">
                <label asp-for="DiscountCode.IsUsed" class="form-label"></label>
                <input asp-for="DiscountCode.IsUsed" class="checkbox" />
            </div>
            <button type="submit" class="btn btn-block btn-primary">ویرایش کد تخفیف</button>
        </form>
    </div>
</section>