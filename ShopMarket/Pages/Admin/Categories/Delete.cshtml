@page "{id}"

@model ShopMarket.Pages.Admin.Categories.DeleteModel

@{
    ViewData["Title"] = "حذف دسته بندی";
}
<form method="post">
    <input type="hidden" asp-for="Id"/>
    <h1> آیا از حذف دسته بندی @Model.CategoryName مطمئن هستید؟</h1>

    <a asp-page="index" class="btn btn-link">بازگشت به صفحه دسته بندی ها</a>
    <button type="submit" class="btn btn-danger">حذف دسته بندی</button>
</form>