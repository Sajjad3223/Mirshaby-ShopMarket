@page
@using ShopMarket.Core.ViewModels.ShopViewModels.ProductViewModels
@model ShopMarket.Pages.Admin.Categories.CreateModel

@{
    ViewData["Title"] = "ایجاد دسته بندی جدید";
}

<section id="multiple-column-form">
    <div class="row match-height">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">افزودن دسته بندی جدید</h4>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        <form class="form" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label asp-for="ShopCategoryViewModel.Title"></label>
                                        <input asp-for="ShopCategoryViewModel.Title" class="form-control" placeholder="عنوان دسته بندی">
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label asp-for="ShopCategoryViewModel.CategoryImageFile" class="form-label"></label>
                                        <input class="form-control" asp-for="ShopCategoryViewModel.CategoryImageFile">
                                    </div>
                                </div>
                                <div class="form-group col-6">
                                    <div class="input-group mb-3">
                                        <label class="input-group-text" asp-for="ShopCategoryViewModel.ParentId">دسته بندی والد</label>
                                        <select class="form-select" asp-for="ShopCategoryViewModel.ParentId" asp-items="@(ViewData["Categories"] as SelectList)">
                                            <option value="">----</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-check col-4">
                                    <div class="checkbox">
                                        <input asp-for="ShopCategoryViewModel.ShowInMainPage" class="form-check-input" >
                                        <label asp-for="ShopCategoryViewModel.ShowInMainPage"></label>
                                    </div>
                                </div>
                                <div class="col-12 d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary me-1 mb-1">ثبت گروه</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
